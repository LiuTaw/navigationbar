<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/style_search_bg_store"
    android:gravity="left|center_vertical"
    android:layout_marginLeft="@dimen/normal_divider"
    android:layout_marginRight="@dimen/normal_divider"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="@dimen/normal_divider"
        android:src="@drawable/icon_search_navi"/>
    <EditText
        android:id="@+id/edit_search_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_divider"
        android:maxLines="1"
        android:textColorHint="#BEBEBE"
        android:background="@drawable/style_edit_bg_login_inside"
        android:hint="搜索店铺或商家" />

</LinearLayout>